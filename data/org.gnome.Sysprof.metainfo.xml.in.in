<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <translation type="gettext">sysprof</translation>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <name>Sysprof</name>
  <summary>Profile an application or entire system</summary>
  <project_license>GPL-3.0+</project_license>
  <project_group>GNOME</project_group>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name>Christian Hergert</developer_name>
  <developer id="org.gnome">
    <name>Christian Hergert</name>
  </developer>

  <description>
    <p>Sysprof allows you to profile applications to aid in debugging and optimization.</p>
  </description>

  <!-- These allow us to be found in GNOME Software, as it ignores the description for searching: -->
  <keywords>
    <keyword>profiler</keyword>
    <keyword>profiling</keyword>
    <keyword>performance</keyword>
    <keyword>latency</keyword>
    <keyword>speed</keyword>
    <keyword>slowness</keyword>
    <keyword>power consumption</keyword>
    <keyword>energy efficiency</keyword>
    <keyword>battery life</keyword>
    <keyword>optimization</keyword>
    <keyword>optimizing</keyword>
    <keyword>auditing</keyword>
    <keyword>sampling</keyword>
    <keyword>sampler</keyword>
    <keyword>benchmarking</keyword>
    <keyword>measurements</keyword>
    <keyword>counters</keyword>
    <keyword>CPU usage</keyword>
    <keyword>stack traces</keyword>
    <keyword translate="no">stacktraces</keyword>
    <keyword>call graphs</keyword>
    <keyword>flame graphs</keyword>
    <keyword translate="no">flamegraphs</keyword>
    <keyword>flame charts</keyword>
    <keyword translate="no">flamecharts</keyword>
    <keyword>programming</keyword>
    <keyword>software developers</keyword>
    <keyword>software development</keyword>
    <keyword>testing</keyword>
    <keyword>QA</keyword>
    <keyword>quality assurance</keyword>
    <keyword>troubleshooting</keyword>
    <keyword>inefficiencies</keyword>
    <keyword>debugging</keyword>
    <keyword>memory allocations tracer</keyword>
    <keyword>memory leaks detector</keyword>
    <keyword>compositor</keyword>
    <keyword>graphics</keyword>
    <keyword>frames timing</keyword>
    <keyword>system logs</keyword>
    <keyword>logging</keyword>
    <keyword>Linux kernel</keyword>
    <keyword translate="no">GNOME Shell</keyword>
    <keyword translate="no">debuginfod</keyword>
    <keyword translate="no">D-Bus</keyword>
  </keywords>

  <url type="homepage">https://apps.gnome.org/Sysprof/</url>
  <url type="bugtracker">https://gitlab.gnome.org/GNOME/sysprof/issues</url>
  <url type="contribute">https://welcome.gnome.org/app/Sysprof/</url>
  <url type="donation">https://www.gnome.org/donate/</url>
  <url type="translate">https://l10n.gnome.org/module/sysprof/</url>
  <url type="vcs-browser">https://gitlab.gnome.org/GNOME/sysprof/</url>

  <screenshots>
    <screenshot type="default">
      <image>https://git.gnome.org/browse/sysprof/plain/data/screenshots/sysprof-main-window.png</image>
    </screenshot>
  </screenshots>

  <kudos>
    <kudo>AppMenu</kudo>
    <kudo>HiDpiIcon</kudo>
    <kudo>ModernToolkit</kudo>
    <kudo>UserDocs</kudo>
  </kudos>

  <provides>
    <binary>sysprof</binary>
    <binary>sysprof-agent</binary>
    <binary>sysprof-cli</binary>
    <dbus type="system">org.gnome.Sysprof2</dbus>
    <dbus type="system">org.gnome.Sysprof3</dbus>
  </provides>

  <releases>
    <release version="50.beta" date="2026-02-03"/>
    <release version="50.alpha" date="2026-01-05"/>
  </releases>

  <metadata_license>CC0-1.0</metadata_license>
  <update_contact>chergert_AT_redhat.com</update_contact>
  <content_rating type="oars-1.0" />
</component>
