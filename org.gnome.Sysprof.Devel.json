{
    "app-id" : "org.gnome.Sysprof.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "sysprof",
    "tags" : [
        "nightly"
    ],
    "finish-args" : [
        "--require-version=1.0.0",
        "--allow=devel",
        "--talk-name=org.freedesktop.Flatpak",
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--socket=system-bus",
        "--filesystem=home",
        "--filesystem=host",
        "--share=network",
        "--talk-name=org.gtk.vfs.*",
        "--system-talk-name=org.freedesktop.PolicyKit1",
        "--system-talk-name=org.gnome.Sysprof3",
        "--system-talk-name=org.freedesktop.Avahi",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=/var/lib/flatpak:ro",
        "--filesystem=~/.local/share/flatpak:ro"
    ],
    "build-options" : {
        "cflags" : "-O2 -g -fno-omit-frame-pointer",
        "cxxflags" : "-O2 -g -fno-omit-frame-pointer"
    },
    "cleanup" : [
        "*.la",
        "*.a",
        "/bin/sysprof-agent",
        "/bin/sysprof-cli",
        "/include",
        "/lib/pkgconfig",
        "/lib/libsysprof*",
        "/man",
        "/share/aclocal",
        "/share/bash-completions",
        "/share/doc",
        "/share/gettext",
        "/share/gtk-doc",
        "/share/info",
        "/share/man",
        "/share/pkgconfig",
        "/share/polkit-1",
        "/share/vala",
        "/lib/extensions/usr/bin",
        "/lib/extensions/usr/include",
        "/lib/extensions/usr/lib/*.so",
        "/lib/extensions/usr/lib/*.so.*",
        "/lib/extensions/usr/lib/*.la",
        "/lib/extensions/usr/lib/*.a",
        "/lib/extensions/usr/lib/gio",
        "/lib/extensions/usr/lib/glib-2.0",
        "/lib/extensions/usr/lib/pkgconfig",
        "/lib/extensions/usr/libexec/gio-launch-desktop",
        "/lib/extensions/usr/share/aclocal",
        "/lib/extensions/usr/share/bash-completion",
        "/lib/extensions/usr/share/doc",
        "/lib/extensions/usr/share/dbus-1/interfaces",
        "/lib/extensions/usr/share/gdb",
        "/lib/extensions/usr/share/gettext",
        "/lib/extensions/usr/share/glib-2.0",
        "/lib/extensions/usr/share/info",
        "/lib/extensions/usr/share/locale",
        "/lib/extensions/usr/share/man"
    ],
    "modules" : [
        {
            "name": "intltool",
            "cleanup": [ "*" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/intltool/trunk/0.51.0/+download/intltool-0.51.0.tar.gz",
                    "sha256": "67c74d94196b153b774ab9f89b2fa6c6ba79352407037c8c14d5aeb334e959cd"
                }
            ]
        },
        {
            "name" : "polkit",
            "config-opts" : [
                "--enable-static",
                "--disable-polkitd",
                "--disable-man-pages",
                "--disable-introspection",
                "--disable-examples",
                "--disable-gtk-doc",
                "--disable-libelogind",
                "--disable-libsystemd-login",
                "--with-systemdsystemunitdir=no",
                "--with-authdb=dummy",
                "--with-authfw=none"
            ],
            "rm-configure" : true,
            "cleanup" : [
                "/bin/*",
                "/etc/pam.d",
                "/etc/dbus-1",
                "/share/dbus-1/system-services/*",
                "/share/polkit-1/actions/*",
                "/lib/polkit-1"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.freedesktop.org/software/polkit/releases/polkit-0.116.tar.gz",
                    "sha256" : "88170c9e711e8db305a12fdb8234fac5706c61969b94e084d0f117d8ec5d34b1"
                },
                {
                    "type" : "patch",
                    "path" : "build-aux/flatpak/polkit-build-Add-option-to-build-without-polkitd.patch"
                },
                {
                    "type" : "file",
                    "path" : "build-aux/flatpak/polkit-autogen",
                    "dest-filename" : "autogen.sh"
                }
            ]
        },
        {
            "name" : "libpanel",
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=debugoptimized",
                "-Ddocs=disabled",
                "-Dintrospection=disabled",
                "-Dinstall-examples=false",
                "-Ddevelopment=true",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libpanel.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "libdex",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddocs=false",
                "-Dintrospection=disabled",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libdex.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "zlib",
            "buildsystem" : "simple",
            "build-commands" : [
                "./configure --prefix=/app/lib/extensions/usr --libdir=/app/lib/extensions/usr/lib",
                "make",
                "make install"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/madler/zlib.git",
                    "tag" : "v1.3.1"
                }
            ]
        },
        {
            "name" : "pcre2",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--enable-static",
                "--prefix=/app/lib/extensions/usr",
                "--libdir=/app/lib/extensions/usr/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/PCRE2Project/pcre2.git"
                }
            ]
        },
        {
            "name" : "libffi",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--enable-static",
                "--prefix=/app/lib/extensions/usr",
                "--libdir=/app/lib/extensions/usr/lib"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/libffi/libffi.git"
                }
            ]
        },
        {
            "name" : "glib",
            "buildsystem" : "meson",
            "build-options" : {
                "env" : {
                    "PKG_CONFIG_PATH" : "/app/lib/extensions/usr/lib/pkgconfig"
                }
            },
            "config-opts" : [
                "--prefix=/app/lib/extensions/usr",
                "--libdir=lib",
                "-Ddefault_library=static",
                "-Ddocumentation=false",
                "-Dintrospection=disabled",
                "-Dlibelf=disabled",
                "-Dlibmount=disabled",
                "-Dman-pages=disabled",
                "-Dselinux=disabled",
                "-Dsysprof=disabled",
                "-Dtests=false",
                "-Dxattr=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/glib.git",
                    "branch" : "main"
                }
            ]
        },
        {
            "name" : "sysprofd",
            "config-opts" : [
                "--prefix=/app/lib/extensions/usr",
                "--libdir=lib",
                "-Ddefault_library=static",
                "-Dpkg_config_path=/app/lib/extensions/usr/lib/pkgconfig:/app/lib/pkgconfig:",
                "-Dsystemdunitdir=/app/lib/extensions/usr/lib/systemd/system",
                "-Dlibsysprof=false",
                "-Dtools=false",
                "-Dgtk=false",
                "-Dpreloads=false",
                "-Dsysprofd=bundled",
                "-Dsysext=true",
                "-Dhelp=false",
                "-Dtests=false",
                "-Dexamples=false"
            ],
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/sysprof.git",
                    "branch" : "wip/chergert/sysext"
                }
            ]
        },
        {
            "name" : "sysprof",
            "config-opts" : [
                "--libdir=/app/lib",
                "-Ddevelopment=true",
                "-Dexamples=false",
                "-Dgtk=true",
                "-Dinstall-static=false",
                "-Dlibsysprof=true",
                "-Dpreloads=false",
                "-Dsysext=false",
                "-Dsysprofd=host",
                "-Dtests=false",
                "-Dtools=false"
            ],
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/sysprof.git",
                    "branch" : "wip/chergert/sysext"
                }
            ]
        }
    ]
}
